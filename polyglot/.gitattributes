
# All .bat batch files must be saved using DOS/Windows default crlf fline endings.
*.bat text eol=crlf

# Force LF for Batch/Bash polyglot files (required for bash compatibility)
polyglot.bat text eol=lf
../scripts/x86_64-unknown-cosmo-cc text eol=lf
../scripts/x86_64-unknown-cosmo-ar text eol=lf
../scripts/build text eol=lf
../scripts/bootstrap_deps text eol=lf
../scripts/build_with_config text eol=lf

